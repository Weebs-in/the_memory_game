<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GuessActivity">

    <LinearLayout
        android:id="@+id/url_input_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/match_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X of 6 matches"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="00:03:45"
            android:textSize="20sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/image_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="10">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

            <sg.edu.nus.iss.thememorygame.SquareImageView
                android:id="@+id/image_guess_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_clear" />

        </TableRow>
    </TableLayout>
</LinearLayout>
